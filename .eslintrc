{
  "plugins": [
    "react",
    "prettier",
    "react-native"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "avoid",
        "semi": true,
        "trailingComma": "es5",
        "endOfLine": "auto",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "printWidth": 120,
        "jsxSingleQuote": false
      }
    ],
    "react-hooks/exhaustive-deps": "off",
    "no-unused-vars": "off"
  }
}